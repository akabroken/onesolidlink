<%- include('../pages/layout') %>
<main>
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card" style="width: 100rem;"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Customers</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/customer/add">Add customer</a>
                </li>
            </ul>
        </div>
    <div class="card-body">        
        <% if(data.length) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">User Id</th>
                    <th scope="col"> Name</th>			
                    <th scope="col">Organization</th>
                    <th scope="col">Email</th>
					<th scope="col">Phone Number</th>
                    <th scope="col">Address</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].userId%></td>
                    <td><%= data[i].firstName +' '+ data[i].middleName%></td>
                    <td><%= data[i].organization%></td>
                    <td><%= data[i].email%></td>
					<td><%= data[i].phoneNumber%></td>
                    <td><%= data[i].address%></td>        
                    <td>
                        <a class="btn btn-success edit" href="../customer/edit/<%=data[i].customerId %>">Edit</a>
                        <a class="btn btn-danger delete" onclick="return alert('Are you sure want to delete this record?')" href="../customer/delete/<%=data[i].customerId %>">Delete</a> 
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No customer found!</p>
        <% } %>
        </div>
    </div>
</main>
