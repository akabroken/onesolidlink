<%- include('../pages/layout') %>
<main>
	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>
    <div class="card" style="width: 100rem;"> 
    	<div class="card-header">
			Add Organizer
		</div>
        <div class="card-body">
            <form action="/organizer/add" method="post">
                <div class="form-group">
                    <label>Staff Id:</label>
                    <input type="text" class="form-control" name="staffId" value="<%= staffId %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <input type="text" class="form-control" name="description" value="<%= description %>" autocomplete="off">
                </div>               		
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>
</main>

