<%- include('../pages/layout_main') %>

    <% if (messages.success) { %>
        <div class="alert success"><%- messages.success %></div>
        <% } %>

            <% if (messages.error) { %>
                <div class="alert warning"><%- messages.error %></div>
                <% } %>
                    <div>
                        <form class="event-form" action="/hotels/booking/<%= id %>" method="post">
                            <section class="form-section">
                                <fieldset>
                                    <legend>
                                        <h2>Submitter Information</h2>
                                    </legend>
                                    <p>We require your personal information in order to finalize your reservation.
                                        Please
                                        take a moment to complete the form provided, and double-check that the room,
                                        number
                                        of guests, and selected dates are accurate. When everything is in order, click
                                        the
                                        "Confirm Booking" button to proceed with your reservation.</p>
                                    <div class="submitter-group">
                                        <div class="form-group">
                                            <label>First Name:</label>
                                            <input type="text" id="firstname" name="firstname" placeholder="First Name"
                                                required>
                                            <label>Mid Name:</label>
                                            <input type="text" id="middlename" placeholder="Middle Name"
                                                name="middlename">
                                        </div>
                                        <div class="form-group">
                                            <label>Last Name:</label>
                                            <input type="text" id="lastname" placeholder="Last Name" name="lastname"
                                                required>
                                            <label>Email:</label>
                                            <input type="email" id="email" name="email" placeholder="Email" required>
                                        </div>
                                    </div>

                                    <div class="submitter-group">
                                        <div class="form-group">
                                            <label>Company:</label>
                                            <input type="text" id="organization" name="organization"
                                                placeholder="Organization/Company">
                                            <label>Address:</label>
                                            <input type="text" id="address" name="address" placeholder="Address"
                                                required>
                                        </div>
                                        <div class="form-group">
                                            <label>Phone:</label>
                                            <input type="tel" id="phone" name="phone" placeholder="Phone Number"
                                                required>
                                            <label>Country</label>
                                            <input type="tel" id="country" name="country" placeholder="Country"
                                                required>
                                        </div>

                                    </div>

                                    <div class="submitter-group">

                                        <div class="form-group">
                                            <label>City:</label>
                                            <input type="text" id="city" name="city" placeholder="City" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Location</label>
                                            <input type="text" id="location" name="location"
                                                placeholder="Location">
                                        </div>

                                    </div>
                                    <div class="submitter-group">
                                        <div class="form-group">
                                            <label> Date In: </label>
                                            <input type="date" id="checkin" name="checkin" required>
                                            <span>
                                                <i class="fa fa-calendar " style="font-size:24px"></i>
                                            </span>
                                            <label> Date Out: </label>
                                            <input type="date" id="checkout" name="checkout" required>
                                            <span>
                                                <i class="fa fa-calendar " style="font-size:24px"></i>
                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <label> PAX: </label>
                                            <input type="number" id="pax" name="pax" placeholder="pax">
                                            <label> Gender: </label>
                                            <select name="gender">
                                                <option value="">-- Select Gender --</option>
                                                <option value="male">Male</option>
                                                <option value="female">Female</option>
                                                <option value="both">Both</option>
                                        </div>
                                        </select>
                                    </div>
                                </fieldset>
                                <div class="form-group">
                                    <input type="submit" value="Submit">
                                </div>
                            </section>
                        </form>
                    </div>


                    <%- include('../pages/footer') %>