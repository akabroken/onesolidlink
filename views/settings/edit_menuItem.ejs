<%- include('../pages/layout') %>

<main>
	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>
    <div class="card" style="width: 100rem;"> 
    	<div class="card-header">
			Edit Menu Item
		</div>
        <div class="card-body">
            <form action="/menu/update/<%= id %>" method="post">
                <div class="form-group">
                    <label>Label:</label>
                    <input type="text" class="form-control" name="label" value="<%= label %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Link:</label>
                    <input type="text" class="form-control" name="link" value="<%= link %>" autocomplete="off">
                </div> 
                <div class="form-group">
                    <label>Parent Id:</label>
                    <input type="number" class="form-control" name="parent_id" value="<%= parent_id %>" autocomplete="off">
                </div>  
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Update"/>
                </div>
            </form>
        </div>
    </div>
</main>

