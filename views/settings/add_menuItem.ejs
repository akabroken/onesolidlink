<%- include('../pages/layout') %>

<main>
	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>
    <div class="card" style="width: 100rem;"> 
    	<div class="card-header">
			Add Menu Item
		</div>
        <div class="card-body">
            <form action="/menu/add" method="post">
                <div class="form-group">
                    <label>Label:</label>
                    <input type="text" class="form-control" name="label" value="<%= label %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Link:</label>
                    <input type="text" class="form-control" name="link" value="<%= link %>" autocomplete="off">
                </div> 
                <div class="form-group">
                    <label>Parent Id:</label>
                   
                    <select class="select" name="parent_id"  data-mdb-placeholder="Example placeholder" >
                        <% for (var i=0; i < data.length; i++) { %>
                            <option name="parentid" value="<%= data[i].id %>"><%= data[i].label %></option>
                            <% } %>
                    </select>
                </div>               		
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>
</main>

